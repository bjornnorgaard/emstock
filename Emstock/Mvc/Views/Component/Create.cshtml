                    <option value="1">Available      </option>
                    <option value="2">ReservedLoaner </option>
                    <option value="3">ReservedAdmin  </option>
                    <option value="4">Loaned         </option>
                    <option value="5">Defect         </option>
                    <option value="6">Trashed        </option>
                    <option value="7">Lost           </option>
                    <option value="8">NeverReturned  </option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminComment" class="control-label"></label>
                <input asp-for="AdminComment" class="form-control" />
                <span asp-validation-for="AdminComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserComment" class="control-label"></label>
                <input asp-for="UserComment" class="form-control" />
                <span asp-validation-for="UserComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentLoanInformationId" class="control-label"></label>
                <input asp-for="CurrentLoanInformationId" class="form-control" />
                <span asp-validation-for="CurrentLoanInformationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeId" class="control-label"></label>
                <input asp-for="TypeId" class="form-control" />
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

