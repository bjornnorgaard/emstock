@model Mvc.ViewModels.ComponentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Component</h2>

<h4>Component</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.Component.Id)
            <div class="form-group">
                <label asp-for="Component.Number" class="control-label"></label>
                <input asp-for="Component.Number" class="form-control" />
                <span asp-validation-for="Component.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Component.SerialNo" class="control-label"></label>
                <input asp-for="Component.SerialNo" class="form-control" />
                <span asp-validation-for="Component.SerialNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Component.Status" class="control-label"></label>
                <select asp-for="Component.Status" class="form-control">
                    <option value="1">Available      </option>
                    <option value="2">ReservedLoaner </option>
                    <option value="3">ReservedAdmin  </option>
                    <option value="4">Loaned         </option>
                    <option value="5">Defect         </option>
                    <option value="6">Trashed        </option>
                    <option value="7">Lost           </option>
                    <option value="8">NeverReturned  </option>
                </select>
                <span asp-validation-for="Component.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Component.AdminComment" class="control-label"></label>
                <input asp-for="Component.AdminComment" class="form-control" />
                <span asp-validation-for="Component.AdminComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Component.Type" class="control-label"></label>
                <select asp-for="TypeId" asp-items="Model.Types" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Component.UserComment" class="control-label"></label>
                <input asp-for="Component.UserComment" class="form-control" />
                <span asp-validation-for="Component.UserComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Component.CurrentLoanInformationId" class="control-label"></label>
                <input asp-for="Component.CurrentLoanInformationId" class="form-control" />
                <span asp-validation-for="Component.CurrentLoanInformationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
